{
		"title": "Open source product design",
		"language": "en",

		"structure": {
			"readme": "introduction.md",
			"glossary": ""
		},

		 "variables": {
				"meta": {
						"source_url": "https://github.com/libreobjet/open-guide",
						"compilation_date": "December 16th, 2015"
				}
		},

		"plugins":[
			"image-captions",
			"-fontsettings"
		],
		"pluginsConfig": {
			"image-captions": {
				"variable_name": "pictures",
				"list_caption": "_CAPTION_",
				"caption": "Image: _CAPTION_"
			}
		},


		"styles": {
			"pdf": "./styles/pdf.css",
			"website": "./styles/website.css"
		},

    "pdf": {
        "toc": true,
        "pageNumbers": true,

        "fontSize": 10,
        "fontFamily": "Open sans",

        "paperSize": "a5",
        "chapterMark" : "pagebreak",
        "pageBreaksBefore": "/",

        "margin": {
            "right": 62,
            "left": 62,
            "top": 56,
            "bottom": 56
        }
    }

}
